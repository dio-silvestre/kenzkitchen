                      "type": "string",
                      "example": "john@mail.com"
                    },
                    "isManager": {
                      "type": "boolean",
                      "example": true
                    },
                    "createdAt": {
                      "type": "date",
                      "example": "2022-02-15T01:49:34.603Z"
                    },
                    "updatedAt": {
                      "type": "date",
                      "example": "2022-02-15T01:49:34.603Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "array",
                      "example": [
                        "user already exists",
                        [
                          "name is required",
                          "password is required"
                        ]
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "UNAUTHORIZED",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
