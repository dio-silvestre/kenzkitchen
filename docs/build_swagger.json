{
  "openapi": "3.0.0",
  "info": {
    "title": "KenzieKitchen API",
    "description": "This is a server for production process management focused on the food industry",
    "contact": {
      "name": "Kenzie Kitchen Support",
      "url": "http://www.kenziekitchen.com/support",
      "email": "support@kenziekitchen.com"
    },
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api-documentation",
      "description": "development"
    },
    {
      "url": "https://api-heroku-kenzie-kitchen/api-documentation",
      "description": "production"
    }
  ],
  "paths": {
    "/companies/:companyId/users": {
      "post": {
        "description": "Essa rota é responsavel por registrar um usuário no sistema da empresa. Apenas usuário logado do tipo administrador pode realizar essa ação.",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/companyParam"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@mail.com"
                  },
                  "isManager": {
                    "type": "boolean",
                    "example": true
                  },
                  "password": {
                    "type": "string",
                    "example": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "CREATED",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "f890f820-e904-4055-8fae-7fa13b1d7cad"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "john@mail.com"
                    },
                    "isManager": {
                      "type": "boolean",
                      "example": true
                    },
                    "createdAt": {
                      "type": "date",
                      "example": "2022-02-15T01:49:34.603Z"
                    },
                    "updatedAt": {
                      "type": "date",
                      "example": "2022-02-15T01:49:34.603Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "array",
                      "example": [
                        "user already exists",
                        [
                          "name is required",
                          "password is required"
                        ]
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "NOT AUTHORIZED",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "array",
                      "example": [
                        "missing authorization headers",
                        "missing admin permissions",
                        "invalid toekn"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/companies/:companyId/users/login": {
      "post": {
        "description": "Essa rota é responsável por fazer o login do usuário. Gera token de autenticação.",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/companyParam"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john@mail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE2MDcxODM3NzYsImV4cCI6MTYwNzQ0Mjk3Niwic3ViIjoiMmE3NWUxMmQtZmQxYy00ODFkLWJhODgtNGQ4YjE3MTAzYjJhIn0.UY67X23mPYAAzT43uFWZDHPUakd2STo5w4AuOcppkyQ"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "array",
                      "example": [
                        "email is required",
                        "password is required"
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "NOT AUTHORIZED",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "wrong email/password"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "isManager": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          },
          "createdAt": {
            "description": "readOnly",
            "type": "date"
          },
          "updatedAt": {
            "description": "readOnly",
            "type": "date"
          }
        }
      }
    },
    "parameters": {
      "companyParam": {
        "name": "companyId",
        "in": "path",
        "required": true,
        "description": "The company's id the user belongs to",
        "schema": {
          "type": "string"
        }
      }
    }
  }
}
