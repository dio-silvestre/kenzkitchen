          "Users"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/companyParam"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@mail.com"
                  },
                  "isManager": {
                    "type": "boolean",
                    "example": true
                  },
                  "password": {
                    "type": "string",
                    "example": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "CREATED",
